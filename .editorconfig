# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# WXML files (微信小程序模板文件)
[*.wxml]
indent_size = 2
max_line_length = 120

# WXSS files (微信小程序样式文件)
[*.wxss]
indent_size = 2
max_line_length = 120

# WXS files (微信小程序脚本文件)
[*.wxs]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass}]
indent_size = 2
max_line_length = 120

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Configuration files
[*.{config,conf}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Ignore binary files
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot}]
insert_final_newline = false
trim_trailing_whitespace = false