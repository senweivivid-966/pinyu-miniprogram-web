/* pages/frequency-match/index.wxss */
.frequency-match-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 120rpx;
}

/* 顶部导航 */
.top-nav {
  padding: 80rpx 40rpx 40rpx;
  text-align: center;
  color: white;
}

.nav-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.nav-subtitle {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 会员列表 */
.member-list {
  height: calc(100vh - 200rpx);
  padding: 0 32rpx;
}

.member-cards {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 会员卡片 */
.member-card {
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

/* 微信小程序不支持 ::before 伪元素选择器 */
/* 如需实现顶部渐变条效果，请在 WXML 中添加真实的 view 元素 */
.member-card .gradient-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #FF6B9D, #C147E9);
}

/* 会员头像区域 */
.member-header {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
  position: relative;
}

.member-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 6rpx solid #f3f4f6;
}

.online-indicator {
  position: absolute;
  bottom: 20rpx;
  right: calc(50% - 80rpx);
  width: 32rpx;
  height: 32rpx;
  background: #10b981;
  border-radius: 50%;
  border: 4rpx solid white;
}

/* 会员信息 */
.member-info {
  text-align: center;
}

.member-name-age {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.member-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f2937;
}

.member-age {
  font-size: 28rpx;
  color: #6b7280;
  background: #f3f4f6;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.member-location {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.location-icon {
  font-size: 24rpx;
}

.location-text {
  font-size: 26rpx;
  color: #6b7280;
}

.member-bio {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

/* 兴趣标签 */
.interests {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.interest-tag {
  background: linear-gradient(135deg, #FF6B9D, #C147E9);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 匹配度 */
.match-score {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.score-label {
  font-size: 26rpx;
  color: #6b7280;
  min-width: 80rpx;
}

.score-bar {
  flex: 1;
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
}

.score-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B9D, #C147E9);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.score-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #FF6B9D;
  min-width: 60rpx;
  text-align: right;
}

/* 操作按钮 */
.member-actions {
  display: flex;
  justify-content: center;
  gap: 48rpx;
}

.action-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.skip-btn {
  background: #f3f4f6;
  border: 2rpx solid #e5e7eb;
}

.skip-btn .action-icon {
  font-size: 48rpx;
  color: #6b7280;
}

.like-btn {
  background: linear-gradient(135deg, #FF6B9D, #C147E9);
}

.like-btn.liked {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.like-btn .action-icon {
  font-size: 48rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e7eb;
  border-top: 4rpx solid #FF6B9D;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: white;
  opacity: 0.8;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 60rpx 0;
  color: white;
  opacity: 0.6;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
}

.empty-subtitle {
  font-size: 28rpx;
  color: white;
  opacity: 0.8;
  margin-bottom: 48rpx;
  line-height: 1.5;
}

.empty-btn {
  background: white;
  color: #FF6B9D;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}