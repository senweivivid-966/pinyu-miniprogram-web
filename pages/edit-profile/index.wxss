/* pages/edit-profile/index.wxss */
.edit-profile-page {
  height: 100vh;
  background: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.top-nav {
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  height: 44px;
}

.nav-left {
  display: flex;
  align-items: center;
  color: #007aff;
}

.back-icon {
  font-size: 24px;
  font-weight: 300;
  margin-right: 4px;
}

.back-text {
  font-size: 16px;
}

.nav-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.nav-right {
  min-width: 60px;
  display: flex;
  justify-content: flex-end;
}

.save-btn {
  background: #007aff;
  color: #fff;
  border: none;
  border-radius: 16px;
  padding: 6px 16px;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.2s ease;
}

.save-btn:active {
  background: #0056cc;
  transform: scale(0.98);
}

.save-btn.saving {
  background: #ccc;
  color: #999;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 0 16px;
}

/* 表单区块 */
.form-section {
  background: #fff;
  border-radius: 12px;
  margin: 16px 0;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  padding: 16px 20px 12px;
  border-bottom: 1px solid #f5f5f5;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  align-items: center;
  padding: 20px;
}

.avatar-preview {
  width: 80px;
  height: 80px;
  border-radius: 40px;
  border: 3px solid #f0f0f0;
  margin-right: 16px;
}

.avatar-edit {
  flex: 1;
}

.edit-icon {
  font-size: 24px;
  margin-bottom: 4px;
  display: block;
}

.edit-text {
  font-size: 14px;
  color: #666;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f5f5f5;
  min-height: 24px;
}

.form-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 16px;
  color: #333;
  width: 80px;
  flex-shrink: 0;
}

.item-input {
  flex: 1;
  font-size: 16px;
  color: #333;
  text-align: right;
}

.item-input::placeholder {
  color: #ccc;
}

/* 选择器 */
.picker-value {
  flex: 1;
  font-size: 16px;
  color: #333;
  text-align: right;
  padding: 8px 0;
}

/* 文本域项 */
.textarea-item {
  flex-direction: column;
  align-items: stretch;
  padding: 16px 20px 12px;
}

.item-textarea {
  width: 100%;
  min-height: 80px;
  font-size: 16px;
  color: #333;
  line-height: 1.5;
  padding: 12px 0;
  box-sizing: border-box;
}

.item-textarea::placeholder {
  color: #ccc;
}

.char-count {
  font-size: 12px;
  color: #999;
  text-align: right;
  margin-top: 8px;
}

/* 底部间距 */
.bottom-spacing {
  height: 40px;
}

/* 加载覆盖层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-container {
  background: #fff;
  border-radius: 12px;
  padding: 24px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 24px;
  height: 24px;
  border: 2px solid #e0e0e0;
  border-top: 2px solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 12px;
}

.loading-text {
  font-size: 14px;
  color: #666;
}

/* 动画 */
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}