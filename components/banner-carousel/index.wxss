/* components/banner-carousel/index.wxss */
.banner-carousel {
  width: 100%;
  position: relative;
  margin: 0 8rpx;
}

.carousel-swiper {
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.carousel-item {
  width: 100%;
  height: 100%;
}

.banner-content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.banner-title {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.5);
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.banner-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  text-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 32rpx;
}

.banner-button {
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  color: white;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}