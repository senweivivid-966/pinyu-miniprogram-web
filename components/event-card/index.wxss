.event-card {
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  border: 1px solid #f0f0f0;
}

.card-content {
  display: flex;
  gap: 12px;
}

/* 图片容器 */
.image-container {
  width: 96px;
  height: 96px;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 12px;
  transition: opacity 0.3s ease;
}

.cover-image.loading {
  opacity: 0;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 12px;
  background: rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.image-placeholder.loading {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading 1.5s infinite;
}

.loading-animation {
  width: 20px;
  height: 20px;
  border: 2px solid #e0e0e0;
  border-top: 2px solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.error-text {
  font-size: 12px;
  color: #999;
  margin-bottom: 4px;
}

.retry-btn {
  position: absolute;
  bottom: 4px;
  right: 4px;
  padding: 2px 6px;
  font-size: 10px;
  background: rgba(0, 0, 0, 0.2);
  color: #fff;
  border: none;
  border-radius: 4px;
}

/* 内容区域 */
.content-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

.meta {
  font-size: 14px;
  color: #666;
  line-height: 1.4;
}

.location {
  font-size: 12px;
  color: #999;
  line-height: 1.3;
}

/* 高亮样式 */
.highlight {
  background: #fff3cd;
  color: #856404;
  padding: 0 2px;
  border-radius: 2px;
}

/* 状态标签 */
.status-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-top: 4px;
}

.tag {
  padding: 4px 8px;
  border-radius: 6px;
  font-size: 12px;
  line-height: 1;
}

.tag.registered {
  background: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.tag.waitlisted {
  background: rgba(0, 0, 0, 0.1);
  color: #666;
}

.tag.position {
  background: rgba(0, 0, 0, 0.05);
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 8px;
}

.btn {
  height: 36px;
  padding: 0 12px;
  border-radius: 8px;
  font-size: 14px;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 60px;
  transition: all 0.2s ease;
}

.btn.primary {
  background: #007aff;
  color: #fff;
}

.btn.primary:not(.disabled):active {
  background: #0056cc;
  transform: scale(0.98);
}

.btn.secondary {
  background: #f2f2f7;
  color: #007aff;
}

.btn.secondary:active {
  background: #e5e5ea;
  transform: scale(0.98);
}

.btn.disabled {
  background: #f2f2f7;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20px;
}

.modal-content {
  background: #fff;
  border-radius: 12px;
  width: 100%;
  max-width: 400px;
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}

.close-btn {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: #f2f2f7;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #666;
}

.modal-body {
  padding: 20px;
  max-height: 60vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 16px;
}

.label {
  display: block;
  font-size: 14px;
  color: #333;
  margin-bottom: 8px;
}

.input, .textarea {
  width: 100%;
  padding: 12px;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  font-size: 16px;
  background: #fff;
  box-sizing: border-box;
}

.input:focus, .textarea:focus {
  border-color: transparent;
  outline: none;
}

.textarea {
  height: 80px;
  resize: none;
}

.modal-footer {
  display: flex;
  gap: 12px;
  padding: 16px 20px;
  border-top: 1px solid #f0f0f0;
}

.modal-footer .btn {
  flex: 1;
  height: 44px;
}

/* 动画 */
@keyframes loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}