/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  backdrop-filter: blur(20rpx);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: none;
  z-index: 1000;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.tab-bar-border {
  background: linear-gradient(90deg, transparent 0%, rgba(255, 107, 157, 0.3) 50%, transparent 100%);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 3rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 16rpx 0;
  transition: all 0.3s ease;
  position: relative;
  min-height: 80rpx;
}

.tab-bar-item.active {
  transform: translateY(-3rpx);
}

.tab-bar-item.active::before {
  content: '';
  position: absolute;
  top: -3rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 56rpx;
  height: 5rpx;
  background: linear-gradient(135deg, #FF6B9D 0%, #C147E9 100%);
  border-radius: 5rpx;
}

.tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-bar-icon {
  transform: scale(1.08);
}

.tab-bar-text {
  font-size: 22rpx;
  line-height: 1.2;
  color: #999999;
  font-weight: 400;
  transition: all 0.3s ease;
}

.tab-bar-item.active .tab-bar-text {
  color: #FF6B9D;
  font-weight: 500;
  transform: scale(1.05);
}

/* 图标样式 */
.icon-svg {
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

/* 首页图标样式 */
.home-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-icon .icon-house {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  width: 28rpx;
  height: 20rpx;
  border: 3rpx solid #999999;
  border-bottom: none;
  border-radius: 3rpx 3rpx 0 0;
  transition: all 0.3s ease;
}

.home-icon .icon-roof {
  position: absolute;
  top: 16rpx;
  left: 3rpx;
  width: 0;
  height: 0;
  border-left: 17rpx solid transparent;
  border-right: 17rpx solid transparent;
  border-bottom: 14rpx solid #999999;
  transition: all 0.3s ease;
}

.home-icon.active .icon-house {
  border-color: #FF6B9D;
}

.home-icon.active .icon-roof {
  border-bottom-color: #FF6B9D;
}

/* 相遇图标样式 */
.heart-icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 私信图标样式 */
.message-icon {
  width: 24px;
  height: 24px;
  position: relative;
}

/* 发布图标样式 */
.plus-icon {
  width: 24px;
  height: 24px;
  position: relative;
}

/* 用户图标样式 */
.user-icon {
  width: 24px;
  height: 24px;
  position: relative;
}

/* 注意：微信小程序不支持 ::before 和 ::after 伪元素选择器 */
