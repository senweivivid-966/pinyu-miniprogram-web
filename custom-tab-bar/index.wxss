/* 激活状态样式 */
.tab-bar-item.active .tab-bar-text {
  color: #FF6B9D;
}

.tab-bar-item.active .home-icon,
.tab-bar-item.active .heart-icon,
.tab-bar-item.active .message-icon,
.tab-bar-item.active .plus-icon,
.tab-bar-item.active .user-icon {
  color: #FF6B9D;
}