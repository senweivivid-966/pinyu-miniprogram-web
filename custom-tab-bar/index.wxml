<cover-view class="tab-bar">
  <cover-view class="tab-bar-border"></cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-view class="tab-bar-icon">
      <cover-view wx:if="{{item.icon === 'heart'}}" class="icon-svg">
        <cover-view class="heart-icon {{selected === index ? 'active' : ''}}"></cover-view>
      </cover-view>
      
      <cover-view wx:elif="{{item.icon === 'message'}}" class="icon-svg">
        <cover-view class="message-icon {{selected === index ? 'active' : ''}}"></cover-view>
      </cover-view>
      
      <cover-view wx:elif="{{item.icon === 'plus'}}" class="icon-svg">
        <cover-view class="plus-icon {{selected === index ? 'active' : ''}}"></cover-view>
      </cover-view>
      
      <cover-view wx:elif="{{item.icon === 'user'}}" class="icon-svg">
        <cover-view class="user-icon {{selected === index ? 'active' : ''}}"></cover-view>
      </cover-view>
      
      <cover-view wx:elif="{{item.icon === 'home'}}" class="icon-svg">
        <cover-view class="home-icon {{selected === index ? 'active' : ''}}"></cover-view>
      </cover-view>
    </cover-view>
    
    <cover-view class="tab-bar-text" style="color: {{selected === index ? selectedColor : color}}">
      {{item.text}}
    </cover-view>
  </cover-view>
</cover-view>